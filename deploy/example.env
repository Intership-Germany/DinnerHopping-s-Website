# Exemple de configuration production
ENVIRONMENT=production
DEBUG=False

# Mongo (si le container est nommé mongo dans le même network docker)
MONGO_URI=mongodb://mongo:27017/dinnerhopping
MONGO_DB=dinnerhopping

# Sécurité / JWT
JWT_SECRET=change_me_prod_secret_long_random
TOKEN_PEPPER=long_random_pepper
ACCESS_TOKEN_BYTES=32
ENFORCE_HTTPS=True

# CORS (si sous-domaines séparés)
ALLOWED_ORIGINS=https://www.example.com,https://example.com
CORS_ALLOW_CREDENTIALS=True

# Base URL utilisée dans emails ou liens
BACKEND_BASE_URL=https://api.example.com
API_PREFIX=/api

# SMTP
SMTP_HOST=smtp.provider.tld
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=xxxxxxxx
SMTP_FROM_ADDRESS=info@example.com
SMTP_USE_TLS=True

# Payments
STRIPE_API_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
PAYPAL_CLIENT_ID=live_client_id
PAYPAL_CLIENT_SECRET=live_client_secret
PAYPAL_ENV=live
PAYMENT_CURRENCY=EUR

# Features
ENABLE_CHAT=True

# Email verification
EMAIL_VERIFICATION_EXPIRES_HOURS=48
