# SMTP
SMTP_HOST=smtp.provider.tld
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=xxxxxxxx
SMTP_FROM_ADDRESS=info@example.com
SMTP_USE_TLS=True

# Payments
STRIPE_API_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
PAYPAL_CLIENT_ID=live_client_id
PAYPAL_CLIENT_SECRET=live_client_secret
PAYPAL_ENV=live
PAYMENT_CURRENCY=EUR
WERO_IBAN=DE02120300000000202051
WERO_BIC=BYLADEM1001
WERO_BENEFICIARY=DinnerHopping GmbH
